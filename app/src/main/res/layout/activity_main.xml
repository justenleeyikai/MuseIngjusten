<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ap_black"
	android:backgroundTint="@android:color/background_dark"
	android:orientation="vertical"
	android:visibility="visible">

    <Spinner
		android:id="@+id/muses_spinner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
		android:weightSum="1">

		<Button
			android:id="@+id/refresh"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="100dp"
			android:layout_height="40dp"
			android:layout_weight="0.53"
			android:background="@color/off_white"
			android:elevation="5dp"
			android:text="@string/refresh" />

		<Button
			android:id="@+id/connect"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="100dp"
			android:layout_height="40dp"
			android:layout_weight="0.53"
			android:background="@color/off_white"
			android:text="@string/connect" />

		<Button
			android:id="@+id/disconnect"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="120dp"
			android:layout_height="40dp"
			android:background="@color/off_white"
			android:backgroundTint="@color/off_white"
			android:text="@string/disconnect" />
	</LinearLayout>

	<TextView
		android:id="@+id/con_status"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/undefined"
		android:textColor="@color/ap_gray"
		android:textSize="16sp"
		android:visibility="visible" />

	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textColor="@color/ap_gray"

		android:text="@string/eeg"
        android:textSize="16sp" />

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
		android:orientation="horizontal">

		<TextView
            android:id="@+id/eeg_tp9"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textSize="16sp"
			android:textColor="@color/ap_gray"
			/>

		<TextView
            android:id="@+id/eeg_af7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="@color/ap_gray"
			android:text="@string/init_val"
			android:textSize="16sp" />

		<TextView
            android:id="@+id/eeg_af8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="@color/ap_gray"
			android:text="@string/init_val"
			android:textSize="16sp" />

		<TextView
            android:id="@+id/eeg_tp10"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="@color/ap_gray"
			android:text="@string/init_val"
			android:textSize="16sp" />
    </LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/accel"
		android:textColor="@color/ap_gray"
		android:textSize="16sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/acc_x"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textColor="@color/ap_gray"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/acc_y"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textColor="@color/ap_gray"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/acc_z"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textColor="@color/ap_gray"
			android:textSize="16sp" />
	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:text="@string/muse_elem"
		android:textColor="@color/ap_gray"
		android:textSize="16sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/elem1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textColor="@color/ap_gray"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/elem2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textColor="@color/ap_gray"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/elem3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/elem4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/init_val"
			android:textSize="16sp" />
	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:text="@string/version"
		android:textSize="16sp" />

	<TextView
		android:id="@+id/version"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:text="@string/undefined"
		android:textSize="16sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="1">

		<Button
			android:id="@+id/pause"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="100dp"
			android:layout_height="40dp"
			android:background="@color/off_white"
			android:elevation="5dp"
			android:text="@string/pause" />

		<Button
			android:id="@+id/view_graph"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="65dp"
			android:layout_height="40dp"
			android:text="View Graph"
			android:background="@color/off_white"
			android:elevation="5dp"
			android:layout_weight="0.46" />

		<Button
			android:id="@+id/button1"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="59dp"
			android:layout_height="40dp"
			android:layout_weight="0.44"
			android:onClick="startRecording"
			android:background="@color/off_white"
			android:elevation="5dp"
			android:text="Start Recording" />

		<Button
			android:id="@+id/button2"
			style="@android:style/Widget.Material.Light.Button.Inset"
			android:layout_width="108dp"
			android:layout_height="40dp"
			android:onClick="stopRecording"
			android:background="@color/off_white"
			android:elevation="5dp"
			android:text="Stop Recording" />


	</LinearLayout>


</LinearLayout>